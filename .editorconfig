# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Docstrings and comments use max_line_length = 79
[*.py]
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
end_of_line = lf
max_line_length = 119

# Batch files use tabs for indentation
[*.bat]
indent_style = tab
